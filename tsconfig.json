{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "removeComments": true,
    "rootDir": "src",
    "target": "esnext"
  },
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
